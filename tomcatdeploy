node {
    state('SCM') {
        git 'https://github.com/dileep208/my-app.git'
    }
    stage('Compile-Package') {
        sh 'mvn clean package'
    }
    stage('Deploy') {
       sshagent(['tomcatCredentials']) {
            sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@18.191.153.245:/opt/tomcat8/webapps'
  }
    }

}
